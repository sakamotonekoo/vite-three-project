{
  "compilerOptions": {
    "jsx": "react",
    "target": "ESNext",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*"
  ],
}